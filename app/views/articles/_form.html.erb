<%= form_with model: @article, class: '' do |form| %>
  <%= render 'shared/errors', resource: @article %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.rich_text_area :body %>
  </div>
  <div>
    <%= form.submit class: "flex-shrink-0 bg-teal-500 hover:bg-teal-700 border-teal-500 hover:border-teal-700 text-sm border-4 text-white py-1 px-2 rounded" %>
  </div>
<% end %>
