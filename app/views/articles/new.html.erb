<%= turbo_frame_tag "turbo-modal" do %>
  <div data-controller="turbo-modal" data-action="turbo:submit-end->turbo-modal#submitEnd">
    <div data-action="click->turbo-modal#close" class="fixed z-10 w-full h-full top-0 left-0 bg-black bg-opacity-40"></div>
    <div data-turbo-modal-target="sidebar" class="fixed top-0 right-0 z-20 w-1/2 sm:w-3/6 lg:w-2/6 h-full bg-white overflow-y-scroll shadow flex flex-col ease-in-out duration-300 p-5 translate-x-full">
      <p class="cursor-pointer mb-4" data-action="click->turbo-modal#close">❌</p>
      <h2 class="font-bold mb-4">Crear Artículo</h2>
      <%= render 'form' %>
    </div>
  </div>
<% end %>