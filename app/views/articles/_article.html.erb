<div class="flex min-h-[calc(100vh-100px)] flex-grow flex-col sm:min-h-[calc(100vh-76px)]" id="article_show_<%= article.id %>">
  <header class="relative flex flex-col items-center overflow-hidden px-5 pb-8 sm:pt-10">
    <div class="relative z-10 mx-auto flex w-full max-w-screen-lg flex-col items-center">
      <div class="flex flex-col items-center justify-center pb-24 pt-10 text-center">
        <h1 class="text-center font-heading text-4xl font-black sm:text-5xl lg:text-6xl">
          <%= article.title %>
        </h1>
        <%= button_to 'Editar', edit_article_path(article),
                                  class: 'rounded-xl bg-blue-500 px-4 py-2 font-medium text-white transition hover:brightness-110',
                                  method: :get,
                                  data: {
                                    turbo_frame: "turbo-modal"
                                  } %>
      </div>
      <div class="flex w-full max-w-screen-md flex-wrap items-center justify-center gap-10 leading-none sm:justify-between sm:text-lg">
        <div class="col-span-3 flex items-center justify-center md:col-span-3 md:justify-start">
          <span style="box-sizing: border-box; display: inline-block; overflow: hidden; width: initial; height: initial; background: none; opacity: 1; border: 0px; margin: 0px; padding: 0px; position: relative; max-width: 100%;">
            <span style="box-sizing: border-box; display: block; width: initial; height: initial; background: none; opacity: 1; border: 0px; margin: 0px; padding: 0px; max-width: 100%;">
              <img alt="" aria-hidden="true" src="data:image/svg+xml,%3csvg%20xmlns=%27http://www.w3.org/2000/svg%27%20version=%271.1%27%20width=%2764%27%20height=%2764%27/%3e" style="display: block; max-width: 100%; width: initial; height: initial; background: none; opacity: 1; border: 0px; margin: 0px; padding: 0px;">
            </span>
            <img alt="Simon Vrachliotis" srcset="/_next/image?url=%2F_next%2Fstatic%2Fmedia%2Fsimon-vrachliotis.ea87c478.png&amp;w=64&amp;q=75 1x, /_next/image?url=%2F_next%2Fstatic%2Fmedia%2Fsimon-vrachliotis.ea87c478.png&amp;w=128&amp;q=75 2x" src="/_next/image?url=%2F_next%2Fstatic%2Fmedia%2Fsimon-vrachliotis.ea87c478.png&amp;w=128&amp;q=75" decoding="async" data-nimg="intrinsic" style="position: absolute; inset: 0px; box-sizing: border-box; padding: 0px; border: none; margin: auto; display: block; width: 0px; height: 0px; min-width: 100%; max-width: 100%; min-height: 100%; max-height: 100%;">
          </span>
          <a href="https://twitter.com/simonswiss" class="pl-2 leading-none decoration-indigo-500 underline-offset-1 hover:underline" target="_blank" rel="noopener noreferrer">
            Usuario Random
          </a>
        </div>
        <div class="flex flex-col gap-5 sm:text-left">
          <time datetime="2023-07-24">
            <div class="pb-1.5 text-sm font-semibold uppercase tracking-wide text-gray-500">publicado</div>
            <div><%= article.fmt_published %></div>
          </time>
          <time datetime="2023-07-24">
            <div class="pb-1.5 text-sm font-semibold uppercase tracking-wide text-gray-500">última actualización</div>
            <div><%= article.fmt_updated %></div>
          </time>
        </div>
      </div>
    </div>
  </header>
  <main>
    <div class="mx-auto w-full max-w-screen-md px-5 pb-10 sm:pb-24 sm:pt-10 lg:px-0">
      <article class="max-w-none pt-8 sm:prose-lg">
        <%= article.content %>
      </article>
    </div>
  </main>
</div>
