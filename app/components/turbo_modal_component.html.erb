<%= turbo_frame_tag "turbo-modal" do %>
  <div
    data-controller="turbo-modal"
    data-action="
      turbo:submit-end->turbo-modal#submitEnd
      keyup@window->turbo-modal#closeWithKeyboard
    ">
    <div data-action="click->turbo-modal#close" class="fixed z-10 w-full h-full top-0 left-0 bg-black bg-opacity-40"></div>
    <div data-turbo-modal-target="sidebar" class="fixed top-0 right-0 z-20 w-1/2 sm:w-3/6 lg:w-2/5 h-full bg-white overflow-y-scroll shadow flex flex-col ease-in-out duration-300 p-5 translate-x-full">
      <div class="mb-3 flex items-center">
        <h2 class="text-3xl font-bold mb-4"><%= @title %></h2>
        <span class="cursor-pointer mb-4 ml-auto" data-action="click->turbo-modal#close">❌</span>
      </div>
      <%= content %>
    </div>
  </div>
<% end %>